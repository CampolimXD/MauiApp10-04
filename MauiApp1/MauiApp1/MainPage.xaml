<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="#F4F5F6">
    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20,15">

            <!-- Título principal -->
            <Label Grid.Row="0"
             Text="Cadastro de Produtos"
             FontSize="28"
             FontAttributes="Bold"
             TextColor="#2F3E46"
             HorizontalOptions="Center"
             Margin="0,20,0,15"/>

            <!-- Card do formulário -->
            <Border Grid.Row="1"
              BackgroundColor="#FFFFFF"
              Stroke="#B0B8BD"
              StrokeThickness="1"
              StrokeShape="RoundRectangle 16,16,16,16"
              Margin="0,10,0,20">
                <Grid BackgroundColor="#FFFFFF" Padding="0">

                    <!-- Gradiente de fundo leve -->
                    <BoxView>
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F8F9FA" Offset="0.0" />
                                <GradientStop Color="#FFFFFF" Offset="1.0" />
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>

                    <!-- Conteúdo do formulário -->
                    <VerticalStackLayout Padding="25,20" Spacing="18">

                        <!-- Campo de nome -->
                        <Frame CornerRadius="10"
                   BorderColor="#B0B8BD"
                   Padding="0"
                   BackgroundColor="#FFFFFF">
                            <Entry x:Name="nomeEntry"
                     Placeholder="Nome do Produto"
                     PlaceholderColor="#C8D6D7"
                     TextColor="#2F3E46"
                     BackgroundColor="Transparent"
                     Margin="10,0"/>
                        </Frame>

                        <!-- Campo de preço -->
                        <Frame CornerRadius="10"
                   BorderColor="#B0B8BD"
                   Padding="0"
                   BackgroundColor="#FFFFFF">
                            <Entry x:Name="precoEntry"
                     Placeholder="Preço"
                     Keyboard="Numeric"
                     PlaceholderColor="#C8D6D7"
                     TextColor="#2F3E46"
                     BackgroundColor="Transparent"
                     Margin="10,0"/>
                        </Frame>

                        <!-- Seleção de categoria -->
                        <Frame CornerRadius="10"
                   BorderColor="#B0B8BD"
                   Padding="0"
                   BackgroundColor="#FFFFFF">
                            <Picker x:Name="CategoriaPicker"
                      Title="Categoria"
                      TitleColor="#C8D6D7"
                      TextColor="#2F3E46"
                      BackgroundColor="Transparent"
                      Margin="10,0">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Todas</x:String>
                                        <x:String>Alimentos</x:String>
                                        <x:String>Eletrônicos</x:String>
                                        <x:String>Vestuário</x:String>
                                        <x:String>Outros</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Frame>

                        <!-- Seleção de data -->
                        <Frame CornerRadius="10"
                   BorderColor="#B0B8BD"
                   Padding="0"
                   BackgroundColor="#FFFFFF">
                            <DatePicker x:Name="validadeDatePicker"
                          Format="dd/MM/yyyy"
                          TextColor="#2F3E46"
                          BackgroundColor="Transparent"
                          Margin="10,0"/>
                        </Frame>
                        
                        <!--Seleção de imagem-->
                        
                            <Button Text="Selecionar Imagem"
                        Clicked="SelecionarImagem_Clicked"
                        BackgroundColor="#8BA7B0"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        />
                        <VerticalStackLayout Spacing="14" Margin="0,5" HorizontalOptions="Center">
                            <Frame CornerRadius="12"
                       BorderColor="#A4B0B8"
                       Padding="0"
                       HeightRequest="180"
                       WidthRequest="180"
                       IsClippedToBounds="True"
                       HasShadow="False">
                                <Image x:Name="previewImagem"
                           Aspect="AspectFill"
                           BackgroundColor="#E0E5EA"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Botões de ação -->
                        <Button x:Name="AdicionarProduto"
                    Text="Adicionar Produto"
                    Clicked="AdicionarProduto_Clicked"
                    BackgroundColor="#2F3E46"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Margin="0,10,0,5"/>

                        <Button x:Name="IrParaLista"
                    Text="Ver Lista de Produtos"
                    Clicked="IrParaLista_Clicked"
                    BackgroundColor="#2F3E46"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"/>

                        <!-- Mensagem de feedback -->
                        <Label x:Name="mensagemLabel"
                   FontSize="16"
                   TextColor="#4A5568"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
